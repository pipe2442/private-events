<h1 class="d-flex justify-content-center">Events created by <%= @user.name %></h1>

<section class="d-flex justify-content-center">
    <div>
        <% @user.events.each do |event| %>
            <div class="my-5">
                <div class="field d-flex justify-content-center"><%= event.title %></div>
            </div>
        <% end %>
    </div>
</section>

<h1 class="d-flex justify-content-center">Events Im invited</h1>


<section class="d-flex justify-content-center">
    <div>
        <% @attendances.each do |attendance| %>
            <% if attendance.attendee.id == @user.id %>
            <div class="my-5">
                <div class="field d-flex justify-content-center"><%= attendance.event.title %></div>
            </div>
            <% end %>
        <% end %>
    </div>
</section>